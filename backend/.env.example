# Backend environment configuration for the AI-driven Web CRM Platform
# Copy this file to `.env` and adjust values for your deployment.

# Database configuration
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/salesupport

# Redis configuration for Celery and background tasks
REDIS_URL=redis://redis:6379/0

# JWT authentication settings
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE=60

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=*

# OpenAI configuration for AI-driven recommendations
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3

# Web Push (VAPID) credentials
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key
VAPID_EMAIL=mailto:admin@example.com

# Data retention policy in days
RETENTION_DAYS=90
